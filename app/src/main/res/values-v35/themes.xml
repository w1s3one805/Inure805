<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Inure" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- This will fix purple status bar issue when app is launched-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAppAccent">@color/inure</item>
        <item name="colorAppAccentLight">@color/inure_light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:colorEdgeEffect">?attr/colorAppAccent</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>